{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*"]
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint:check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "typecheck:ts-4": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    }
  }
}
