{
  "name": "h5p-generate-configs",
  "version": "1.0.0",
  "description": "h5p-generate-configs CLI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boyum/h5p-types.git"
  },
  "homepage": "https://github.com/boyum/h5p-types/tree/main/packages/h5p-generate-configs#readme",
  "bin": {
    "h5p-generate-configs": "./bin/run"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "prepublishOnly": "bun run build",
    "test": "bun run test:unit",
    "test:unit": "bun test src/**/*.test.ts",
    "test:unit:watch": "bun run test:unit -- --watch",
    "test:unit:coverage": "bun run test:unit -- --coverage",
    "demo:semantics": "h5p-generate-configs s --type-definition demo/semantics.ts --out demo/semantics.json -t demo/TranslationKey.ts",
    "demo:library": "h5p-generate-configs l --type-definition demo/library.ts --out demo/library.json",
    "publish-to-npm": "release-it",
    "lint:check": "eslint .",
    "lint:fix": "bun run lint:check -- --fix",
    "version": "oclif readme && git add README.md",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "bun run build && oclif manifest && oclif readme"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "license": "Apache-2.0",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "oclif": {
    "bin": "h5p-generate-configs",
    "dirname": "h5p-generate-configs",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "h5p-generate-configs": {
        "description": "Generate TS and JSON definitions for H5P"
      }
    }
  },
  "dependencies": {
    "@oclif/core": "^2.15.0",
    "@oclif/plugin-help": "^5.2.19",
    "@oclif/plugin-plugins": "^3.4.2"
  },
  "devDependencies": {
    "@oclif/test": "^2.5.4",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "chai": "^4.3.8",
    "copyfiles": "^2.4.1",
    "esbuild-register": "^3.4.2",
    "eslint-config-base": "workspace:*",
    "h5p-types": "workspace:*",
    "mocha": "^10.2.0",
    "oclif": "^3.15.1",
    "release-it": "^16.1.5",
    "shx": "^0.3.4",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "extends": "base"
  }
}
