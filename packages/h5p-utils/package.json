  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boyum/h5p-types.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Sindre BÃ¸yum",
    "url": "https://sinre.dev"
  },
